@page
@model NintendoInventory.UI.Pages.Consoles.addModel
@{

}

<form method="post" id="form">
    <div class="form-group mb-3 col-md-5">
        <label id="labelText" for="inputConsoleName">Console Name:</label>
        <input type="text" class="form-control" id="inputConsoleName" placeholder="Console Name" asp-for="NewConsole.ConsoleName" />
    </div>
    <div class="form-group mb-3 col-md-5">
        <label id="labelText" for="inputConsoleImageURL">Console Image URL:</label>
        <input type="text" class="form-control" id="inputConsoleName" placeholder="Console Image URL" asp-for="NewConsole.ConsoleImageURL" />
    </div>
    <div class="form-group mb-3 col-md-5">
        <label id="labelText" for="inputPrice">Console Price:</label>
        <input type="text" class="form-control" id="inputPrice" placeholder="Console Price" asp-for="NewConsole.Price" />
    </div>
    <button type="submit" id="addButton" class="btn btn-primary">Add Console</button>
</form>


<style>
    #addButton {
        background-color: mediumblue;
        border-radius: 10px;
    }

    #labelText {
        
        font-size: 20px;
        font-weight: bold;
    }

    #form {
        width: 550px;
        padding: 2em 0 2em 0;
        margin-right: auto;
        margin-bottom: 0;
        margin-left: auto;
    }
</style>

