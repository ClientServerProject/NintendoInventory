@page
@model NintendoInventory.UI.Pages.Account.RegisterModel
@{
}

<div class="container border p-3">
    <form method="post">

        <div class="row mb-2">
            <div class="col-sm-2">
                <label asp-for="NewUser.FirstName" class="form-label"></label>
            </div>
            <div class="col-sm-10">
                <input type="text" asp-for="NewUser.FirstName" class="form-control" />
                <span asp-validation-for="NewUser.FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-2">
                <label asp-for="NewUser.LastName" class="form-label"></label>
            </div>
            <div class="col-sm-10">
                <input type="text" asp-for="NewUser.LastName" class="form-control" />
                <span asp-validation-for="NewUser.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-2">
                <label asp-for="NewUser.Email" class="form-label"></label>
            </div>
            <div class="col-sm-10">
                <input type="text" asp-for="NewUser.Email" class="form-control" />
                <span asp-validation-for="NewUser.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-2">
                <label asp-for="NewUser.Password" class="form-label"></label>
            </div>
            <div class="col-sm-10">
                <input type="password" asp-for="NewUser.Password" class="form-control" />
                <span asp-validation-for="NewUser.Password" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-2">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </div>
    </form>
</div>